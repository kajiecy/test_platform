<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="NewsMapper">
    <select id="getNewsById" parameterType="map" resultType="map">
          SELECT * FROM `tbl_news_out`
          where 1=1
        <if test="id != null">
            AND id = #{id}
        </if>
        <if test="news_id != null">
            AND news_id = #{news_id}
        </if>
    </select>

    <!-- 注册 -->
    <insert id="reg" parameterType="map" useGeneratedKeys="true" keyProperty="id">
        insert into tbl_user (pwd,phone,create_time,nickname
        <if test="mone y_bean!=null">
            ,money_bean
        </if>
        ) values (#{pwd},#{phone},now(),#{phone}
        <if test="money_bean!=null">
            ,#{money_bean}
        </if>
        )
    </insert>
</mapper>